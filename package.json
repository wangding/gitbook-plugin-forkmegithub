  "engines": {
    "gitbook": ">=2.5.0"
  },
  "gitbook": {
    "properties": {
      "url": {
        "type": "string",
        "required": true,
        "title": "URL to your GitHub repository"
      },
      "color": {
        "type": "string",
        "default": "gray",
        "title": "Color of ribbon",
        "enum": ["gray", "darkblue", "red", "orange", "green"]
      }
    }
  }
}
